{
  "name": "chatly",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@testing-library/jest-dom": "5.16.4",
    "@testing-library/react": "13.0.1",
    "@testing-library/user-event": "13.5.0",
    "@types/jest": "27.4.1",
    "@types/node": "16.11.27",
    "@types/react": "18.0.5",
    "@types/react-dom": "18.0.1",
    "firebase": "9.6.11",
    "firebase-tools": "10.6.0",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "react-firebase-hooks": "5.0.3",
    "react-scripts": "5.0.1",
    "typescript": "4.6.3",
    "web-vitals": "2.1.4"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "docs": "jsdoc -c jsdoc.conf.json",
    "icons": "npx svgr --typescript  --icon --out-dir src/components/resources/icons/ src/components/resources/icons/svgs",
    "eject": "react-scripts eject",
    "lint": "npm run lint:es && npm run lint:style && npm run lint:types",
    "lint:fix": "npm run lint:es:fix && npm run lint:style:fix && npm run lint:types",
    "lint:es": "eslint . --max-warnings=0",
    "lint:es:fix": "npm run lint:es -- --fix",
    "lint:style": "stylelint \"(!(components/resources/templates/**/*|resources/cpg/**/*|storybook-static/**/*|resources/cmp/**/*))**/*.{ts,tsx,js,jsx,!storybook}\"",
    "lint:style:fix": "npm run lint:style -- --fix",
    "lint:types": "tsc --project tsconfig.json"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ],
    "rules": {
      "no-unused-vars": "off",
      "unused-imports/no-unused-imports": "error",
      "unused-imports/no-unused-vars": [
        "warn",
        {
          "vars": "all",
          "varsIgnorePattern": "^_",
          "args": "after-used",
          "argsIgnorePattern": "^_"
        }
      ]
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@svgr/cli": "6.2.1",
    "better-docs": "2.7.2",
    "eslint": "8.13.0",
    "eslint-plugin-unused-imports": "2.0.0",
    "jsdoc": "3.6.10",
    "sass": "1.50.1"
  }
}
